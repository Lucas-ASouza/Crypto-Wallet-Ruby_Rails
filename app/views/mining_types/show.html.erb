  <form>
      <div class="mb-1">
        <%= label_tag nil, @mining_type.class.human_attribute_name(:description) %>
        <%= text_field_tag nil, @mining_type.description, class:"form-control", placeholder:"Bitcoin...", disabled:true %>
      </div>



      <div class="mb-1">
        <%= label_tag nil, @mining_type.class.human_attribute_name(:acronym) %>
