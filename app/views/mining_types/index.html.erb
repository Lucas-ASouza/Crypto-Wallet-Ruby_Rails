<p id="notice"><%= notice %></p>

<h1><%= MiningType.model_name.human(count: @mining_types.count)%></h1>
 <%# checks the ammount of ocorrunces in DB, if bigger than 1, brings the plural name of the model%>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= @mining_types.human_attribute_name(:description)%></th>
      <th><%= @mining_types.human_attribute_name(:acronym)%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to 'Show', mining_type, class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_mining_type_path(mining_type), class:"btn btn-primary" %></td>
        <td><%= link_to 'Destroy', mining_type, method: :delete, class:"btn btn-primary" ,data: { confirm: t("confirm") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('links.new'), new_mining_type_path, class:"btn btn-primary"%>
