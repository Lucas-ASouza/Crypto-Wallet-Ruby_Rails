    <%= form.label :acronym %>
    <%= form.text_field :acronym, class:"form-control", placeholder:"BTC..."%>
  </div>

  <div class="mb-1">
    
    <%= form.label :url_image %>
    <%= form.text_field :url_image, class:"form-control", placeholder:"http://reddit/bitcoin.png" %>
    <%#= image_tag coin.url_image, height: 25, width: 25, alt: "whathever" %>
  </div>
  
  <div class="mb-1">
  <%= form.label :mining_type_id %>
    <%= form.select("mining_type_id", @mining_type_options, { include_blank: 'Selection'}, class:"form-select") %>
</select>
