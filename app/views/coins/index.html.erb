<p id="notice"><%= notice %></p>

<h1><%= Coin.model_name.human(count: @coins.count)%> </h1>
<%# checks the ammount of ocorrunces in DB, if bigger than 1, brings the plural name of the model%>
<p><%= cookies[:course] %>  </p>
<p><%= session[:course] %>  </p>
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= @coins.human_attribute_name(:description)%> </th>
        <th><%= @coins.human_attribute_name(:acronym)%></th>
        <th><%= @coins.human_attribute_name(:url_image)%></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @coins.each do |coin| %>
        <tr>
          <td><%= coin.description %></td>
          <td><%= coin.acronym %></td>
          <td><%= image_tag coin.url_image, height: 25, width: 25 %> </td>
          <td><%= link_to t('links.show'), coin, class:"btn btn-primary" %></td>
          <td><%= link_to t('links.edit'), edit_coin_path(coin), class:"btn btn-primary" %></td>
          <td><%= link_to t('links.destroy'), coin, method: :delete, class:"btn btn-primary" ,data: { confirm: t("confirm") } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<br>

<%= link_to t('links.new'), new_coin_path, class:"btn btn-primary" %>
