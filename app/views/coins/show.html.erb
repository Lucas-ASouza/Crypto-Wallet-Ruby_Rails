<p id="notice"><%= notice %></p>

  <form>
      <div class="mb-1">
        <%= label_tag nil, @coin.class.human_attribute_name(:description) %>
        <%= text_field_tag nil, @coin.description, class:"form-control", placeholder:"Bitcoin...", disabled:true %>
      </div>



      <div class="mb-1">
        <%= label_tag nil, @coin.class.human_attribute_name(:acronym) %>
        <%= text_field_tag nil, @coin.acronym, class:"form-control", placeholder:"BTC...", disabled:true %>
      </div>

      <div class="mb-1">
        <%= label_tag nil, @coin.class.human_attribute_name(:url_image) %>
        <%= text_field_tag nil, @coin.url_image, class:"form-control", placeholder:"http://reddit/bitcoin.png", disabled:true  %> 
      </div>

        <div class="mb-1">
        <%= label_tag nil, @coin.class.human_attribute_name(:mining_type_id) %>
        <%= text_field_tag nil, @coin.mining_type_id, class:"form-control", placeholder:"http://reddit/bitcoin.png", disabled:true  %> 
      </div>
      
  </form>

<%= link_to t('links.edit'), edit_coin_path(@coin), class:"btn btn-warning" %> |
<%= link_to t('links.back'), coins_path, class:"btn btn-danger" %>
